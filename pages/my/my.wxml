<view class="page">
  <view class="user">
    <view class="user-info">
      <view class="user-name">
        <open-data type="userNickName" ></open-data>
      </view>
      <!-- TODO这个图要切周一问下UI -->
      <view class="user-role"><image src="../../assets/center_content_icon_label.png"></image><text class="role-name">管理员</text></view>
    </view>
    <view class="avatar">
      <open-data type="userAvatarUrl"></open-data>
    </view>
  </view>
  <view class="my-items">
    <view class="my-item fl-center" bindtap="setAccount">
      <view class="fl-center"><image src="../../assets/mine_content_icon_setup.png" class="my-item-icon"></image><text>账号设置</text></view>
      <image src="../../assets/center_content_icon_more.png" class="more-icon"></image>
    </view>
    <view class="my-item">
      <button open-type="contact" class="contact-btn fl-center">
        <view class="fl-center"><image src="../../assets/mine_content_icon_kefu.png" class="my-item-icon"></image><text>平台客服</text></view>
        <image src="../../assets/center_content_icon_more.png" class="more-icon"></image>
      </button>
    </view>
  </view>
</view>
