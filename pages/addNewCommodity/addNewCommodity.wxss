@import '../../components/image-corpper/image-corpper.wxss' ;
.page {
  padding: 60rpx 30rpx 50rpx;
}

.product-img-list {
  display: flex;
  align-items: center;
  justify-content: center;
}

.product-img {
  width: 150rpx;
  height: 150rpx;
  background: #C7E9FF;
  border-radius: 8rpx;
}

.img-box {
  margin: 0 10rpx;
  display: flex;
  align-items: center;
}

.goods-pics {
  margin: 0 20rpx;
  position: relative;
}


.delete-img {
  position: absolute;
  width: 30rpx;
  height: 30rpx;
  right: -15rpx;
  top: -15rpx;
}

.uppload-tips {
  color: #5A5D69;
  font-size: 28rpx;
  text-align: center;
  margin-top: 23rpx;
}

.product-form {
  margin-top: 69rpx;
}

.form-item {
  display: flex;
  align-items: center;
  margin-bottom: 36rpx;
}

.item-title {
  color: #5A5D69;
  width: 140rpx;
  flex-shrink: 0;
}

.require {
  color: #278CFF;
  margin-left: 9rpx;
}

.item-value {
  display: flex;
  align-items: center;
}

.input-value{
  width: 390rpx;
  height: 70rpx;
  line-height: 70rpx;
  padding: 0 20rpx;
  display: flex;
  align-items: center;
  background: #F8FAFC;
  margin-left: 14rpx;
  margin-right: 19rpx;
  border-radius: 8rpx;
}

.placeholder {
  color: #999FB1;
  font-size: 26prx;
}

.select-picker-box {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.select-icon {
  width: 16rpx;
  height: 16rpx;
  flex-shrink: 0;
}

.select-category {
  width: 100%;
  height: 100%;
}

.input-value image {
  width: 16rpx;
  height: 12rpx;
  background: #ffffff;
}

.textarea-flex {
  display: flex;
  align-items: flex-start;
}

.text-area {
  height: 224rpx;
  line-height: normal;
  display: flex;
  align-items: flex-start;
  padding: 20rpx;
}

.limit-style {
  color: #131936;
  max-width: 110rpx;
}

.limit-num {
  color: #999FB1;
}

.word-limit {
  align-self: flex-end;
  flex-shrink: 0;
}

.submit-btn {
  height: 80rpx;
  background: linear-gradient(270deg, #0EBCFC, #278CFF);
  border-radius: 40rpx;
  text-align: center;
  line-height: 80rpx;
  color: #ffffff;
  margin-top: 223rpx;
  left: 30rpx;
}

.corpper-btns {
  position: absolute;
  bottom: 0;
  z-index: 10;
  color: #666666;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 32rpx;
}

.corpper-btns view {
  padding: 20rpx;
} 

.confirm-corpper {
  color: #0EBCFC;
}

.page-hide {
  height: 0;
  overflow: hidden;
}