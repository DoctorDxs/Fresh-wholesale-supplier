/* pages/register/register.wxss */
.page {
  padding: 0 27rpx 40rpx;
}

.title {
  text-align: center;
  font-size: 44rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #060C2B;
  line-height: 30rpx;
  margin: 70rpx 0 53rpx;
}

.logo {
  width: 150rpx;
  height: 150rpx;
  /* background: #E6F2FF; */
  border-radius: 16rpx;
  overflow: hidden;
  margin: 0 auto 100rpx;
}

.logo image {
  width: 100%;
  height: 100%;
}

.input-box {
  display: flex;
  align-items: center;
  margin-bottom: 18rpx;
}

.input-title {
  color: #131936;
  font-size: 30rpx;
  flex-shrink: 0;
  margin-right: 6rpx;
  position: relative;
  text-align: right;
  width: 210rpx;
}

.input-item {
  background: #F4F5F9;
  border-radius: 40rpx;
  height: 80rpx;
  width: 100%;
  padding: 0 18rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.input-item input {
  height: 100%;
  font-size: 28rpx;

}

.placeholder {
  color: #999FB1;
  font-size: 28rpx;
}

.require-icon {
  font-weight: 600;
  color: #FE461F;
  top: -6rpx;
  position: relative;
}

.agree-agreement {
  display: flex;
  align-items: center;
  margin-top: 96rpx;
  justify-content: center;
} 

.link-aggreement {
  display: flex;
  align-items: center;
  font-size: 24rpx;
}

.link-aggreement navigator {
  color: #268EFF;
}

.register-btns button{
  text-align: center;
  height: 80rpx;
  border-radius: 40rpx;
  line-height: 80rpx;
  width: 100%!important;
  font-size: 28rpx!important;
  width: 100%;
}

.register-btn {
  background: linear-gradient(270deg, #0EBCFC, #278CFF);
  color: #ffffff;
  margin-top: 37rpx;
}

.agree-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 16rpx;
}

.code-input {
  display: flex;
  align-items: center;
}

.get-code {
  height: 76rpx;
  border: 1px solid #278CFF;
  color: #278CFF;
  border-radius: 40rpx;
  text-align: center;
  line-height: 76rpx;
  width: 196rpx;
  font-size: 28rpx;
  flex-shrink: 0;
  margin-left: 30rpx;
}

