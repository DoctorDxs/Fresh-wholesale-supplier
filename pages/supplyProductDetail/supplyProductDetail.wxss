/* pages/supplyProductDetil/supplyProductDetil.wxss */
page {
  padding-bottom: 130rpx;
}

.header {
  padding: 30rpx;
  background: #ffffff;
}

.flex-between {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.product-pic {
  width: 120rpx;
  height: 120rpx;
  border-radius: 8rpx;
  margin-right: 30rpx;

}

.name-category {
  display: flex;
}

.category {
  font-size: 24rpx;
  color: #5A5D69;
  margin-top: 40rpx;
}

.title {
  color: #131936;
  font-weight: 600;
  font-size: 30rpx;
}

.state {
  width: 90rpx;
  height: 40rpx;
  background: rgba(0, 198, 87, .1);
  border-radius: 20rpx;
  text-align: center;
  line-height: 40rpx;
  font-size: 22rpx;
  color: rgba(0, 198, 87, 1);
}

.price-stock {
  margin-top: 36rpx;
}

.price {
  color: rgba(19, 25, 54, 1);
  font-size: 24rpx;
}

.price-num {
  color: rgba(254, 70, 31, 1);
  font-size: 28rpx;
  margin-left: 10rpx;
}

.price-unit {
  color: rgba(153, 159, 177, 1);
}

.stock {
  color: rgba(19, 25, 54, 1);
  font-size: 24rpx;
}

.stock text {
  color: rgba(90, 93, 105, 1);
  margin-left: 10rpx;
}

.date {
  margin-top: 30rpx;
  padding-bottom: 40rpx;
  border-bottom: 1rpx solid rgba(238, 240, 245, 1);
}

.updata-date {
  font-size: 24rpx;
  color: rgba(153, 159, 177, 1);
}

.date-limit {
  color: rgba(19, 25, 54, 1);
  font-size: 24rpx;
}

.date-limit text {
  color: rgba(90, 93, 105, 1);
  margin-left: 10rpx;
}

.address {
  font-size: 28rpx;
  color: rgba(19, 25, 54, 1);
  margin-top: 30rpx;
}

.address text {
  color: rgba(90, 92, 105, 1);
  margin-left: 10rpx;
}

.hr {
  height: 20rpx;
  background: #F8FAFC;
}

.detail-title {
  padding: 30rpx;
  color: #5A5D69;
  font-size: 26rpx;
} 

.bottom-btn {
  position: fixed;
  bottom: 0;
  background: #ffffff;
  color: #ffffff;
  display: flex;
  align-items: center;
  font-size: 30rpx;
  text-align: center;
  justify-content: center;
  width: 100%;
  height: 120rpx;
}

.submit-btn {
  height: 80rpx;
  background: linear-gradient(270deg, #0EBCFC, #278CFF);
  border-radius: 40rpx;
  width: 690rpx;
  line-height: 80rpx;
}

.can-not-applay {
  background: #ABB6C4;
}

/* 更新库存报价 */
.dialog-bg {
  position: fixed;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, .5);
  left: 0;
  top: 0;
  display: flex;
  align-items: center;
  justify-content: center;
}

.dialog-main {
  width: 658rpx;
  background: #ffffff;
  border-radius: 14rpx;
  overflow: hidden;
}

.dialog-header {
  padding: 40rpx 0;
  font: 30rpx;
  color: #5A5D69;
  text-align: center;
}

.dialog-content {
  padding: 0 40rpx 62rpx;
}

.content-item {
  display: flex;
  align-items: center;
  margin-top: 40rpx;
}

.item-title {
  color: #5A5D69;
  font-size: 28rpx;
  width: 140rpx;
  flex-shrink: 0;
}

.require {
  color: #278CFF;
  margin-left: 9rpx;
}

.item-value {
  display: flex;
  align-items: center;
  margin-left: 17rpx;
}

.item-value, .item-value input {
  color: #131936;
}

.input-value {
  height: 60rpx;
  width: 290rpx;
  background: #F8FAFC;
  margin-right: 19rpx;
  padding: 0 20rpx;
}

.placeholder {
  color: #999FB1;
}

.dialog-footer {
  display: flex;
  align-items: center;
  height: 99rpx;
  border-top: 1rpx solid #E9E9E9;
  line-height: 99rpx;
} 

.dialog-footer view {
  width: 100%;
  text-align: center;
  font-size: 32rpx;
  height: 100%;
}

.cancle {
  color: #5A5D69;
}

.confirm {
  background: #278CFF;
  color: #ffffff;
}

.content-tips {
  text-align: center;
  font-size: 32rpx;
  font-weight: 500;
  color:#141C24;
}

.dialog-header {
  position: relative;
}

.close-dialog {
  position: absolute;
  width: 26rpx;
  height: 26rpx;
  top: 37rpx;
  right: 37rpx;
}

.self-diolog {
  width: 520rpx;
}

.self-diolog .self-confirm {
  width: 275rpx;
  height: 90rpx;
  background: #278CFF;
  border-radius: 45rpx;
  margin: 0 auto 30rpx;
}

.self-footer {
  border: none;
}

.product-desc img {
  width: 100%;
}